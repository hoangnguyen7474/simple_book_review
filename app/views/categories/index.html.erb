<h1>Categories</h1>

<table class="table-responsive">
  <thead>
    <tr>      
      <th scope="col">Category</th>       
    </tr>
  </thead>

   <tbody>
    <% @categories.each do |cat| %>
      <tr>             
        <td><%= cat.category %></td>               
        <td><%= link_to 'Edit', edit_category_path(cat), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', cat, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-primary"%> </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Category', new_category_path %>
<br>
<%= link_to 'Back', root_path %>
