<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= "#{book.user.first_name} #{book.user.last_name}"%></td>
       
        <td><%= link_to 'Show', book %></td>
        <% if current_user.has_role?(:admin)||current_user.has_role?(:author)%>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?'}%>          
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Book', new_book_path %>
<br>
<%= link_to 'Back', root_path %>

